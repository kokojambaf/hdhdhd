using System;
using System.Data.SqlClient;
using System.Security.Cryptography;
using System.Text;

namespace AuthLibrary
{
    public class AuthService
    {
        private readonly string _connectionString = "your_connection_string";  // Строка подключения к базе данных

        // Метод для регистрации нового пользователя
        public bool RegisterUser(string login, string password)
        {
            string passwordHash = HashPassword(password);

            using (var connection = new SqlConnection(_connectionString))
            {
                connection.Open();
                string insertUser = @"
                    INSERT INTO CinemaUser (Login, PasswordHash, RoleID) 
                    VALUES (@Login, @PasswordHash, 3)";  // Роль 3 — Посетитель (или роль, которую вы выберете)

                using (var command = new SqlCommand(insertUser, connection))
                {
                    command.Parameters.AddWithValue("@Login", login);
                    command.Parameters.AddWithValue("@PasswordHash", passwordHash);
                    int result = command.ExecuteNonQuery();

                    return result > 0;  // Возвращаем true, если пользователь успешно зарегистрирован
                }
            }
        }

        // Метод для аутентификации пользователя
        public bool AuthenticateUser(string login, string password)
        {
            using (var connection = new SqlConnection(_connectionString))
            {
                connection.Open();

                // Получаем хэш пароля и количество неудачных попыток
                string query = "SELECT PasswordHash, FailedLoginAttempts FROM CinemaUser WHERE Login = @Login";
                using (var command = new SqlCommand(query, connection))
                {
                    command.Parameters.AddWithValue("@Login", login);

                    using (var reader = command.ExecuteReader())
                    {
                        if (reader.Read())
                        {
                            string storedPasswordHash = reader["PasswordHash"].ToString();
                            int failedLoginAttempts = Convert.ToInt32(reader["FailedLoginAttempts"]);

                            // Если количество неудачных попыток больше или равно 3, блокируем аккаунт
                            if (failedLoginAttempts >= 3)
                            {
                                Console.WriteLine("Ваш аккаунт заблокирован из-за множества неправильных попыток входа.");
                                return false;
                            }

                            // Проверяем пароль
                            if (VerifyPassword(password, storedPasswordHash))
                            {
                                // Сбросить количество неправильных попыток при успешной аутентификации
                                ResetFailedAttempts(login);
                                Console.WriteLine("Аутентификация успешна!");
                                return true;
                            }
                            else
                            {
                                IncrementFailedAttempts(login);  // Увеличиваем количество неудачных попыток
                                return false;
                            }
                        }
                    }
                }
            }

            return false;  // Возвращаем false, если пользователь не найден или пароль неверный
        }

        // Хэширование пароля
        private string HashPassword(string password)
        {
            using (SHA256 sha256Hash = SHA256.Create())
            {
                byte[] bytes = sha256Hash.ComputeHash(Encoding.UTF8.GetBytes(password));
                return BitConverter.ToString(bytes).Replace("-", "").ToLower();
            }
        }

        // Проверка пароля
        private bool VerifyPassword(string enteredPassword, string storedPasswordHash)
        {
            string enteredPasswordHash = HashPassword(enteredPassword);
            return enteredPasswordHash == storedPasswordHash;
        }

        // Увеличение количества неправильных попыток
        private void IncrementFailedAttempts(string login)
        {
            using (var connection = new SqlConnection(_connectionString))
            {
                connection.Open();
                string updateAttempts = @"
                    UPDATE CinemaUser 
                    SET FailedLoginAttempts = FailedLoginAttempts + 1 
                    WHERE Login = @Login";
                
                using (var command = new SqlCommand(updateAttempts, connection))
                {
                    command.Parameters.AddWithValue("@Login", login);
                    command.ExecuteNonQuery();
                }
            }
        }

        // Сброс неправильных попыток
        private void ResetFailedAttempts(string login)
        {
            using (var connection = new SqlConnection(_connectionString))
            {
                connection.Open();
                string updateAttempts = @"
                    UPDATE CinemaUser 
                    SET FailedLoginAttempts = 0 
                    WHERE Login = @Login";
                
                using (var command = new SqlCommand(updateAttempts, connection))
                {
                    command.Parameters.AddWithValue("@Login", login);
                    command.ExecuteNonQuery();
                }
            }
        }
    }
}







<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Аутентификация" Height="250" Width="400">
    <Grid>
        <TextBox Name="LoginTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,50,0,0" Width="200" Height="30"/>
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,90,0,0" Width="200" Height="30"/>
        <Button Content="Войти" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="150,140,0,0" Click="LoginButton_Click"/>
        <Button Content="Регистрация" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="150,180,0,0" Click="RegisterButton_Click"/>
    </Grid>
</Window>







using System;
using System.Windows;
using AuthLibrary;

namespace WpfApp
{
    public partial class MainWindow : Window
    {
        private AuthService _authService;

        public MainWindow()
        {
            InitializeComponent();
            _authService = new AuthService();
        }

        // Обработчик для аутентификации
        private void LoginButton_Click(object sender, RoutedEventArgs e)
        {
            string login = LoginTextBox.Text;
            string password = PasswordBox.Password;

            bool isAuthenticated = _authService.AuthenticateUser(login, password);
            if (isAuthenticated)
            {
                MessageBox.Show("Аутентификация успешна!");
            }
            else
            {
                MessageBox.Show("Неверный логин или пароль.");
            }
        }

        // Обработчик для регистрации
        private void RegisterButton_Click(object sender, RoutedEventArgs e)
        {
            string login = LoginTextBox.Text;
            string password = PasswordBox.Password;

            bool isRegistered = _authService.RegisterUser(login, password);
            if (isRegistered)
            {
                MessageBox.Show("Регистрация прошла успешно!");
            }
            else
            {
                MessageBox.Show("Ошибка при регистрации.");
            }
        }
    }
}

